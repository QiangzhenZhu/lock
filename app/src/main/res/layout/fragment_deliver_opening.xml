<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_bg"
    tools:context=".views.deliver.DeliverOpeningFragment"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="163dp"
        android:text="存放钥匙"
        android:textColor="@color/colorWhite"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="238dp"
        android:text="扫描IC卡成功"
        android:textColor="@color/colorWhite"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:background="@drawable/ic_lock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_open_box_tips"
        android:layout_width="460dp"
        android:layout_height="65dp"
        android:layout_marginTop="368dp"
        android:background="#D9032438"
        android:gravity="center"
        android:text="请将钥匙放入打开的柜子内，并关闭柜门"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_anchor"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="410dp"
        android:layout_marginTop="520dp"
        android:text="若柜门没有正常开启,请按以下步骤操作"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="1.检测柜门周围无遮挡、无异物卡住箱门"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tv_anchor"
        app:layout_constraintTop_toBottomOf="@+id/tv_anchor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="2.点击重试按钮,再次开门"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tv_anchor"
        app:layout_constraintTop_toBottomOf="@+id/tv_anchor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="3.多次重试之后,仍无法开启,可将钥匙柜设置为故障柜"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tv_anchor"
        app:layout_constraintTop_toBottomOf="@+id/tv_anchor" />

    <Button
        android:id="@+id/bt_retry"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginStart="410dp"
        android:layout_marginTop="665dp"
        android:background="@drawable/button_negative_bg"
        android:text="@string/prompt_retry"
        android:textColor="@color/negative_foreground"
        android:textSize="@dimen/input_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_fault"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginEnd="410dp"
        android:layout_marginTop="665dp"
        android:background="@drawable/button_positive_bg"
        android:text="@string/prompt_set_box_fault"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/input_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>