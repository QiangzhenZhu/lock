<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.deliver.DeliverHomeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp"
        android:text="@string/home_finger"
        android:textColor="@color/colorWhite"
        android:textSize="32sp" />

    <Button
        android:id="@+id/btn_go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="118dp"
        android:background="#00000000"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/go_back"
        android:text="@string/prompt_exit"
        android:textColor="@color/colorWhite"
        android:textSize="28sp" />

    <GridLayout
        android:id="@+id/gl_finger"
        android:layout_width="938dp"
        android:layout_height="380dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:columnCount="5"
        android:rowCount="2"
        tools:ignore="HardcodedText">

        <CheckBox
            android:layout_marginEnd="42dp"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_drawable"
            android:enabled="false"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#5D94B5"
            android:textSize="22sp" />

        <CheckBox
            android:layout_marginEnd="42dp"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_drawable"
            android:enabled="false"
            android:text="2"
            android:textAlignment="center"
            android:textColor="#5D94B5"
            android:textSize="22sp" />

        <CheckBox
            android:layout_marginEnd="42dp"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_drawable"
            android:enabled="false"
            android:text="3"
            android:textAlignment="center"
            android:textColor="#5D94B5"
            android:textSize="22sp" />

        <CheckBox
            android:layout_marginEnd="42dp"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_drawable"
            android:enabled="false"
            android:text="4"
            android:textAlignment="center"
            android:textColor="#5D94B5"
            android:textSize="22sp" />

        <CheckBox
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_drawable"
            android:enabled="false"
            android:text="5"
            android:textAlignment="center"
            android:textColor="#5D94B5"
            android:textSize="22sp" />

        <CheckBox
            android:layout_marginEnd="42dp"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_drawable"
            android:enabled="false"
            android:text="6"
            android:textAlignment="center"
            android:textColor="#5D94B5"
            android:textSize="22sp" />

        <CheckBox
            android:layout_marginEnd="42dp"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_drawable"
            android:enabled="false"
            android:text="7"
            android:textAlignment="center"
            android:textColor="#5D94B5"
            android:textSize="22sp" />

        <CheckBox
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_drawable"
            android:enabled="false"
            android:text="8"
            android:textAlignment="center"
            android:textColor="#5D94B5"
            android:textSize="22sp" />

        <CheckBox
            android:layout_marginEnd="42dp"
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_drawable"
            android:enabled="false"
            android:text="9"
            android:textAlignment="center"
            android:textColor="#5D94B5"
            android:textSize="22sp" />

        <CheckBox
            android:button="@null"
            android:drawableTop="@drawable/radiobutton_drawable"
            android:enabled="false"
            android:text="10"
            android:textAlignment="center"
            android:textColor="#5D94B5"
            android:textSize="22sp" />


    </GridLayout>

    <Button
        android:id="@+id/bt_clear"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_alignStart="@id/gl_finger"
        android:layout_below="@+id/gl_finger"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_negative_bg"
        android:text="清除"
        android:textColor="@color/negative_foreground"
        android:textSize="28sp" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@id/gl_finger"
        android:layout_below="@+id/gl_finger"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_positive_bg"
        android:text="新增"
        android:textColor="@color/colorWhite"
        android:textSize="28sp" />

</RelativeLayout>