<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.navigate.ClientRegisterFragment">

    <View
        android:layout_width="460dp"
        android:layout_height="207dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="#30FFFFFF" />

    <View
        android:id="@+id/line_horizontal"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="278dp"
        android:background="#30FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:text="@string/prompt_register_client"
        android:textColor="@color/colorWhite"
        android:textSize="22sp" />

    <TextView
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_device_id"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/et_device_id"
        android:labelFor="@+id/et_device_id"
        android:text="@string/prompt_manage_device_id"
        android:textColor="@color/colorWhite"
        android:textSize="22sp" />

    <com.hzdongcheng.parcellocker.utils.RichEditText
        android:id="@+id/et_device_id"
        style="@style/EditWhiteBackground"
        android:layout_width="308dp"
        android:layout_height="48dp"
        android:layout_alignEnd="@+id/line_horizontal"
        android:layout_marginTop="320dp"
        android:hint="@string/hint_manage_device_id"
        android:inputType="none"
        android:maxLength="30" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="460dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="427dp"
        android:background="@drawable/button_positive_bg"
        android:text="@string/prompt_sure"
        android:textColor="@color/colorWhite"
        android:textSize="28sp" />

</RelativeLayout>